<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>
<GridPane alignment="CENTER" hgap="10" prefHeight="400.0" prefWidth="600.0" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FirstPage"
          styleClass="grid">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label fx:id="success"
           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="username"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="password"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Repeat Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <PasswordField fx:id="repeatPassword"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label fx:id="warning"
           GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Already have an account? Log in instead" fx:id="b2" onMouseClicked="#enterLogin"/>
        <Button text="Sign Up" fx:id="b1" onMouseClicked="#signUp"/>
    </HBox>

    <stylesheets>
        <URL value="@stylesheets/forms.css"/>
    </stylesheets>

</GridPane>
