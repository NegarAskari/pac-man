<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import model.Board?>
<?import java.net.URL?>
<GridPane alignment="CENTER" hgap="10" prefHeight="500" prefWidth="750" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameSettings"
          styleClass="root">

    <Button text="&#60;" GridPane.columnIndex="0" fx:id="back" onMouseClicked="#back"/>

    <VBox GridPane.columnIndex="1" spacing="10" alignment="CENTER">
        <Label fx:id="name"/>
        <Board fx:id="board"/>
    </VBox>

    <Button text="&#62;" GridPane.columnIndex="2" fx:id="next" onMouseClicked="#next"/>

    <VBox GridPane.columnIndex="3" spacing="10">
        <Button text="Start Game" onMouseClicked="#startGame"/>
        <Button text="Back" onMouseClicked="#backToGameSettings"/>
    </VBox>

    <stylesheets>
        <URL value="@stylesheets/settings.css"/>
    </stylesheets>

</GridPane>
